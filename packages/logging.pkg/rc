require_once("api.inc");


function initialize() {
	global $pkg_info;

	$ret = 0;

	if (!@mkdir($pkg_info['datapath'])) {
		$ret = 1;
	}
	if (!@mkdir($pkg_info['datapath'] . "/asterisk")) {
		$ret = 1;
	}
	if (!@mkdir($pkg_info['datapath'] . "/asterisk/cdr-csv")) {
		$ret = 1;
	}
	if (!touch($pkg_info['datapath'] . "/asterisk/cdr.db")) {
		$ret = 1;
	}

	if (!@mkdir($pkg_info['datapath'] . "/system")) {
		$ret = 1;
	}
	if (!touch($pkg_info['datapath'] . "/system/system.log")) {
		$ret = 1;
	}
	if (!touch($pkg_info['datapath'] . "/system/pbx.log")) {
		$ret = 1;
	}

	return $ret;
}

function apply() {

	$ret = 0;
	$ret |= pbx_configure();
	$ret |= system_syslogd_start();

	return $ret;
}

function update() {
	return 0;
}

function boot() {
	return 0;
}

function shutdown() {
	return 0;
}

?>
